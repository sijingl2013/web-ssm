<?xml version= "1.0" encoding= "UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource= "jdbc.properties" />
    <typeAliases>
        <typeAlias alias= "Author" type= "com.mybatis.model.Author" />
        <typeAlias alias= "Blog" type= "com.mybatis.model.Blog" />
        <typeAlias alias= "Comment" type= "com.mybatis.model.Comment" />
        <typeAlias alias= "Post" type= "com.mybatis.model.Post" />
        <typeAlias alias= "Tag" type= "com.mybatis.model.Tag" />
    </typeAliases>
    <environments default= "development" >
        <environment id= "development" >
            <transactionManager type= "JDBC" />
            <dataSource type= "POOLED" >
                <property name= "driver" value= "${driver}" />
                <property name= "url" value= "${url}" />
                <property name= "username" value= "${username}" />
                <property name= "password" value= "${password}" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource= "com/mybatis/mapping/BlogMapper.xml" />
        <mapper resource= "com/mybatis/mapping/AuthorMapper.xml" />
        <!--<mapper resource= "com/mybatis/mapping/PostMapper.xml" />-->
        <!-- <mapper resource="org/mybatis/data/CommentMapper.xml"/> -->
        <!-- <mapper resource="org/mybatis/data/TagMapper.xml"/> -->
    </mappers>
</configuration>